<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ImageActivity"
    tools:ignore="ExtraText">





    <Button
        android:id="@+id/ImageActivity_Choose"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:text="@string/image_activity_choose" />


    <Button
        android:id="@+id/ImageActivity_Camera"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:text="camera" />

    <Button
        android:id="@+id/ImageActivity_Upload"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:text="@string/image_activity_upload" />

    <TextView
        android:id="@+id/ImageActivity_Tag"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#00FA9A"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:gravity="center"
        android:text="upload"
        android:textColor="@android:color/holo_green_dark" />

    <ImageView
        android:id="@+id/ImageActivity_imgView"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"/>


</LinearLayout>
