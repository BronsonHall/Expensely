<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ResetPasswordActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:contentDescription="@string/login_activity_logo"
        android:src="@mipmap/logo_transparent_cropped"
        android:background="@null" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_password_activity_weve_got_you"
        android:gravity="center"
        android:textSize="@dimen/padding" />

    <EditText
        android:id="@+id/reset_password_email_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_activity_email_address"
        android:inputType="textEmailAddress"
        android:paddingTop="@dimen/padding_large" />

    <Button
        android:id="@+id/reset_password_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/reset_password_activity_reset_password"
        android:ems="10"
        android:layout_marginTop="@dimen/padding" />

    <Button
        android:id="@+id/reset_password_resend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding"
        android:ems="10"
        android:text="@string/reset_password_activity_resend_email"
        android:visibility="invisible" />
</LinearLayout>
